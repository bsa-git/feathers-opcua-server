{
  "name": "feathers-opcua-server",
  "description": "A FeathersJS 'OPC-UA' application",
  "version": "0.0.1",
  "homepage": "https://github.com/bsa-git/feathers-opcua-server",
  "main": "src",
  "keywords": [
    "feathers",
    "OPCUA",
    "opcua",
    "m2m",
    "iot",
    "opc ua",
    "internet of things"
  ],
  "author": {
    "name": "BSA Lab.",
    "email": "bs261257@gmail.com"
  },
  "bin": {
    "callOpcuaMethod": "./scripts/cli/callOpcuaMethod.js",
    "runOpcuaCommand": "./scripts/cli/runOpcuaCommand.js",
    "createAcmYearTemplate": "./scripts/cli/createAcmYearTemplate.js",
    "getAcmDayReportsData": "./scripts/cli/getAcmDayReportsData.js"
  },
  "contributors": [],
  "bugs": {},
  "directories": {
    "lib": "src",
    "test": "test/",
    "config": "config/"
  },
  "engines": {
    "node": ">= 12.x",
    "npm": ">= 6.x"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production node src/",
    "dev": "cross-env NODE_ENV=development DEBUG=app:* npm run eslint && nodemon src/",
    "test:all": "npm run eslint && npm run mocha ",
    "test:debug": "npm run eslint:debug && npm run mocha:debug",
    "test:script": "npm run eslint:script && npm run mocha:script",
    "start-seed": "cross-env NODE_ENV=test node src/ --seed",
    "start-mongod": "mongod -f mongod.config.yml",
    "start-mongod32": "mongod --storageEngine=mmapv1 -f mongod.config.yml",
    "coverage": "nyc npm run mocha",
    "mocha": "cross-env NODE_ENV=test DEBUG=app:* mocha test/ --recursive --exit --timeout 60000",
    "mocha:debug": "cross-env NODE_ENV=test DEBUG=app:* mocha test/debug/ --recursive --exit --timeout 60000",
    "mocha:script": "cross-env NODE_ENV=test DEBUG=app:* mocha scripts/test/ --recursive --exit --timeout 60000 --script=#5.1",
    "eslint": "eslint --fix src/. test/. scripts/. --config .eslintrc.json",
    "eslint:debug": "eslint --fix src/. test/debug/.  --config .eslintrc.json",
    "eslint:script": "eslint --fix src/. scripts/test/.  --config .eslintrc.json",
    "update-dependencies": "ncu -u",
    "nedb-delete": "shx rm -rf data/nedb/test/*.db",
    "nedb-find-users": "nedb ./data/nedb/dev/users.db"
  },
  "dependencies": {
    "@feathersjs/authentication": "^4.5.3",
    "@feathersjs/authentication-client": "^4.5.10",
    "@feathersjs/authentication-local": "^4.5.4",
    "@feathersjs/authentication-oauth": "^4.5.4",
    "@feathersjs/client": "^4.5.15",
    "@feathersjs/configuration": "^4.5.3",
    "@feathersjs/errors": "^4.5.3",
    "@feathersjs/express": "^4.5.4",
    "@feathersjs/feathers": "^4.5.10",
    "@feathersjs/rest-client": "^4.5.10",
    "@feathersjs/socketio": "^4.5.4",
    "@feathersjs/socketio-client": "^4.5.10",
    "ajv": "^6.12.6",
    "cheerio": "^1.0.0-rc.10",
    "color": "^4.2.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "debug": "^4.1.1",
    "del": "^6.1.1",
    "directory-tree": "^2.2.5",
    "dotenv": "^8.2.0",
    "dotenv-webpack": "^1.8.0",
    "exceljs": "^4.3.0",
    "feathers-casl": "^0.5.0",
    "feathers-hooks-common": "^5.0.4",
    "feathers-mongoose": "^8.3.3",
    "feathers-nedb": "^5.1.0",
    "helmet": "^3.22.0",
    "is-unc-path": "^1.0.0",
    "jwt-decode": "^3.1.2",
    "moment": "^2.29.4",
    "mongodb-core": "^3.2.7",
    "mongoose": "^5.12.13",
    "nedb": "^1.8.0",
    "node-fetch": "^2.6.7",
    "node-libcurl": "^2.3.4",
    "node-opcua": "^2.60.2",
    "object-hash": "^3.0.0",
    "papaparse": "^5.3.0",
    "serve-favicon": "^2.5.0",
    "socket.io-client": "^2.4.0",
    "tedious": "^11.0.5",
    "winston": "^3.2.1",
    "xlsx": "^0.17.5",
    "yargs": "^17.3.1"
  },
  "devDependencies": {
    "axios": "^0.27.2",
    "eslint": "^7.1.0",
    "mocha": "^7.2.0",
    "nodemon": "^2.0.4",
    "npm-check-updates": "^6.0.1",
    "nyc": "^15.0.1",
    "shx": "^0.3.2",
    "typescript": "^4.5.2"
  }
}
